# Server Configuration
PORT=4444
CLIENT_PORT=5173

# Database
DB_PATH=./database.sqlite

# Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=24h

# File Upload
MAX_FILE_SIZE_MB=150

# LLM Configuration  
MAX_CONCURRENT_LLM_REQUESTS=15
LLM_REQUEST_RETRY_ATTEMPTS=3
LLM_REQUEST_RETRY_DELAY_MS=500
LLM_ERROR_DELAY_MS=5000
# Reserve some concurrent slots for frontend requests (0.0 to 1.0, where 1.0 = use all slots)
EVALUATION_CONCURRENCY_RATIO=0.8

# AWS Configuration (for bedrock-wrapper)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=AKIXXXXXXXX
AWS_SECRET_ACCESS_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Logging (log level: info, debug, warn, error)
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100